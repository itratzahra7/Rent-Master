<h3> Company Detail </h3>
<br />


<%= form_tag send_email_company_path do %>
  <% if !company_signed_in? && !admin_signed_in? %>  
    <button type="button" data-toggle="modal" data-target="#MyModal" class="btn btn-success contact_company" >Contact Company</button> 
  <% end %>
  <div id="MyModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-header">
          <h3> Contact Company </h3>
        </div>
        <div class="modal-body">
          <%= label_tag :Name %>
          <%= text_field_tag :user_name, nil, :class => "form-control inputdefault"%>
          <br />
          <br />
          <%= label_tag :Email %>
          <%= text_field_tag :user_email, nil, :class => "form-control inputdefault" %> 
          <br />
          <br />
          <%= label_tag :Question %>
          <%= text_area_tag :user_question, nil, {rows: 6, cols: 25, :class => "form-control inputdefault"} %> 
          <br />
          <br />
          <%= submit_tag "Contact", {:class => "btn btn-success"} %>

        </div>
      </div>
    </div> 
  </div>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Email: </strong>
  <%= @company.email %>
</p>

<p>
  <strong>Phone: </strong>
  <%= @company.phone %>
</p>

<p>
 <strong>Description:</strong>
 <%= @company.description %>
</p>

<br />

<% if can? :edit, @company  %>
  <%= button_to 'Edit', edit_company_path(@company), {method: :get, :class => "btn btn-success company_edit_button"} %> 
<% end %>
<% if can? :destroy, @company  %>
  <%= link_to 'Delete', company_path(@company), method: :delete %> 
<% end %>

<%= link_to 'Back', companies_path %>

<br />
<br />

<% unless @company.industries.blank? %>
  <h3> Industries </h3>
  <br />
  <ul>
    <% @company.industries.each do |industry| %>
      <li>
      <%= industry.name %>
      </li>
    <% end %>
  </ul>
<% end %>

<br />

<% unless @company.products.blank? %>
  <h3> Products </h3>
  <br />
  <% @company.products.each do |product| %>
    <span id="product_image">
    <%= image_tag product.product_image.url(:thumb), {:class => "product_images"} %>
    </span>
  <% end %>
  <br />
<% end %>
