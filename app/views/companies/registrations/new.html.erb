<h2>Sign up</h2>
<br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, {autofocus: true,  :class => "form-control inputdefault"} %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, { rows: 6,  :class => "form-control inputdefault"} %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, {:class => "form-control inputdefault"} %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, { autocomplete: "off", :class => "form-control inputdefault"} %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, { autocomplete: "off", :class => "form-control inputdefault"} %>
  </div>
  
   <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, {:class => "form-control inputdefault"} %>
   </div>

    <div class="field">
    <%= f.label :logo %><br>
    <%= f.file_field :logo%>
   </div>
   <br />
  <div class="actions">
    <%= f.submit "Sign up", {:class => "btn btn-success"} %>
  </div>
<% end %>