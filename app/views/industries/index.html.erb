<% if current_admin %>
  <%= button_to "Add Industry", new_industry_path, {:method => 'get', :class => "btn btn-success add_industry"} %>
<% end %>
<br />
<br />

<h3>Listing industries</h3>


<div class="table-responsive">
  <table class="table table-striped table-inverse table-bordered table-hover"> 
    <thead class="table-success">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td><%= industry.status %></td>
        <td>
          <%= link_to 'Show', industry %>
          <%= link_to 'Edit', edit_industry_path(industry) %>
          <%= link_to 'Destroy', industry, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Industry', new_industry_path %>
